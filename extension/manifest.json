{
  "name": "Linkbolt",
  "manifest_version": 3,
  "version": "0.0.1",
  "description": "Seamless Link Sharing Connecting Devices, Unify Your Links, Everywhere.", 
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/worker/background.ts",
    "type": "module"
  },
  "permissions": ["cookies", "storage"],
  "host_permissions": [
    "https://linkbolt.onrender.com/*",
    "http://linkbolt.onrender.com/*"

  ],
  "icons": { 
    "128": "src/assets/icons/128.png"
  },
  "author": {
    "email": "yhoungdev@gmail.com"
  }
}
